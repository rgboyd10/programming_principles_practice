#include <iostream>

using namespace std;

int main()
{
  //declare variables
  string val1;
  double numval1;
  string val2;
  double numval2;
  
  double result;
  char operand;
  
  //prompt the user for the values and operand
  cout << "Please enter two numbers (0-9) in either numeric or text format and the matematical operation that you would like to perform on those numbers, + - / * each followed by enter.\n";

  cin >> val1 >> val2 >> operand;

  //convert val1 if it's string
  if(val1 == "zero")
    {
      numval1 = 0.0;
    }
  else if(val1 == "one")
    {
      numval1 = 1.0;
    }
  else if(val1 == "two")
    {
      numval1 = 2.0;
    }
  else if(val1 == "three")
    {
      numval1 = 3.0;
    }
  else if(val1 == "four")
    {
      numval1 = 4.0;
    }
  else if(val1 == "five")
    {
      numval1 = 5.0;
    }
  else if(val1 == "six")
    {
      numval1 = 6.0;
    }
  else if(val1 == "seven")
    {
      numval1 = 7.0;
    }
  else if(val1 == "eight")
    {
      numval1 = 8.0;
    }
  else if(val1 == "nine")
    {
      numval1 = 9.0;
    }

  //convert val2 if it's string
 if(val2 == "zero")
    {
      numval2 = 0.0;
    }
  else if(val2 == "one")
    {
      numval2 = 1.0;
    }
  else if(val2 == "two")
    {
      numval2 = 2.0;
    }
  else if(val2 == "three")
    {
      numval2 = 3.0;
    }
  else if(val2 == "four")
    {
      numval2 = 4.0;
    }
  else if(val2 == "five")
    {
      numval2 = 5.0;
    }
  else if(val2 == "six")
    {
      numval2 = 6.0;
    }
  else if(val2 == "seven")
    {
      numval2 = 7.0;
    }
  else if(val2 == "eight")
    {
      numval2 = 8.0;
    }
  else if(val2 == "nine")
    {
      numval2 = 9.0;
    }
   
  //ifelse to based on the operand to perform the calculations and assign a result
  if(operand == '+')
    {
      result = numval1 + numval2;
    }
  else if(operand == '-')
    {
      result = numval1 - numval2;
    }
  else if(operand == '*')
    {
      result = numval1 * numval2;
    }
  else if(operand == '/')
    {
      result = numval1 / numval2;
    }
  
  //print the result
  cout << numval1 << " " << operand << " " << numval2 << " = " << result << ".\n";
  
}
